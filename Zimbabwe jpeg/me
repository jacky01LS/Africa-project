    <script> // java script
        function openLetter() {
            document.getElementById('closed-letter').style.display = 'none';
            document.getElementById('open-letter').style.display = 'block';
            document.getElementById('click-me').style.display = 'none';
        }

        function closeLetter() {
            document.getElementById('open-letter').style.display = 'none';
            document.getElementById('closed-letter').style.display = 'flex';
            document.getElementById('click-me').style.display = 'block';
        }

        function openTab(evt, tabId) {
  // Hide all tab content
         const tabContents = document.getElementsByClassName("tab-content");
        for (let i = 0; i < tabContents.length; i++) {
    tabContents[i].style.display = "none";
         }
  
  // Remove active class from all buttons
         const tabButtons = document.getElementsByClassName("tab-btn");
        for (let i = 0; i < tabButtons.length; i++) {
         tabButtons[i].className = tabButtons[i].className.replace(" active", "");
            } 
  
  // Show current tab and mark button as active
        document.getElementById(tabId).style.display = "block";
        evt.currentTarget.className += " active";
}
    </script>

                                    <!--Function openletter() *hide envelope and show letter*
                                        Finds the HTML element with the ID closed-letter. 
                                        Envelope hidden as CSS display property set to none.
                                        Finds the HTML element with the ID open-letter.
                                        Open letter display property set to block, and is displayed--> 

                                    <!--Function closeletter() *hide letter and show closed envelope*
                                        Find HTML element of open letter. 
                                        Hide open letter - CSS display property none. 
                                        Find closed envelope element. 
                                        Closed envelope displayed again by settung display to flex.
                                        *Flex used for better centre alignment*-->
    
                                        

    </body>
